<h1>{{title}}</h1>
<h2>Register a new account</h2>
<main>
    {{#if registered}}
        <p class="register-msg">User successfully created.</p>
        <div class="link-back2"><a href="/login">Login</a></div>
    {{else}}
    {{#if usernametaken}}
        <p class="autherr-msg">The username {{username}} is already taken.</p>
    {{/if}}
    <form class="register-form" method="post" action="/register" id="register-form">
        <div class="fname-input">
            <label for="fname">First name </label>
            <input type="text" id="fname" name="fname">
        </div>
        <div class="lname-input">
            <label for="lname">Last name </label>
            <input type="text" id="lname" name="lname">
        </div>
        <div class="username-input">
            <label for="username">Username </label>
            <input type="text" id="username" name="username">
        </div>
        <div class="password-input">
            <label for="password">Password </label>
            <input type="password" id="password" name="password">
        </div>
        <button type="submit">Register</button>
    </form>
    <div class="link-back2">
        <a href="/login">Use an existing account</a>
    </div>
    {{/if}}
</main>
